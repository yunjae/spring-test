<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
    <definition name="template" template="/WEB-INF/templates/template.jsp">
			<put-attribute name="header" value="/WEB-INF/templates/header.jsp"/>
			<put-attribute name="footer" value="/WEB-INF/templates/footer.jsp"/>    
    </definition>
    
    <definition name="*" extends="template">
    		<put-attribute name="title" value="{1}.title"/>
    		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
    </definition>
    
    <definition name="*_pop" extends="template">
    		<put-attribute name="title" value="{1}.pop.title"/>
    		<put-attribute name="body" value="/WEB-INF/views/{1}_pop.jsp"/>
    </definition>
    		
    <definition name="*/*" extends="template">
    		<put-attribute name="title" value="{1}.{2}/title"/>
    		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>	
    </definition>
    <definition name="*/*_pop" extends="template">
    		<put-attribute name="title" value="{1}.{2}.pop/title"/>
    		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}_pop.jsp"/>	
    </definition>	
</tiles-definitions>